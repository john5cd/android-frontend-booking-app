<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UploadProfilePicActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Choose up to six pictures for your place!"
            android:layout_margin="40dp"
            android:textSize="17dp"
            android:textColorHint="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/placePic1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:background="@color/grey"
                android:padding="1dp"
                android:src="@drawable/add" />
            <ImageView
                android:id="@+id/placePic2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:background="@color/grey"
                android:padding="1dp"
                android:src="@drawable/add"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/placePic3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:background="@color/grey"
                android:padding="1dp"
                android:src="@drawable/add"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/placePic4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:background="@color/grey"
                android:padding="1dp"
                android:src="@drawable/add"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/placePic5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:background="@color/grey"
                android:padding="1dp"
                android:src="@drawable/add"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/placePic6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:background="@color/grey"
                android:padding="1dp"
                android:src="@drawable/add"
                android:visibility="invisible"/>
        </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/remove_place_pic_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#5295E9"
                android:enabled="true"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="Remove"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="invisible"/>

        <TextView
            android:id="@+id/pn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="pic name 1"
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:textColorHint="@color/black"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/pn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="pic name 2"
            android:textSize="17dp"
            android:textColorHint="@color/black"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/pn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="pic name 3"
            android:textSize="17dp"
            android:textColorHint="@color/black"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/pn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="pic name 4"
            android:textSize="17dp"
            android:textColorHint="@color/black"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/pn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="pic name 5"
            android:textSize="17dp"
            android:textColorHint="@color/black"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/pn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="pic name 6"
            android:textSize="17dp"
            android:textColorHint="@color/black"
            android:visibility="invisible"/>


    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_place_pic_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Save"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:backgroundTint="@color/DarkerGreen"
        android:enabled="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>